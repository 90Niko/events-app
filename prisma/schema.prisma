// Prisma schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // change if your DB differs
  url      = env("DATABASE_URL")
}

model Event {
  id                         BigInt    @id @default(autoincrement())
  name                       String
  owner                      String
  description                String?
  venue_name                 String?
  address_line1              String?
  city                       String?
  country                    String?
  event_date                 DateTime?
  start_time                 DateTime?
  end_time                   DateTime?
  timezone                   String?
  reservation_deadline_date  DateTime?
  status                     String?
  url_address                String?  
  @@map("events")
}
